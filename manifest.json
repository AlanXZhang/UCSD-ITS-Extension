{
  "name": "ITS Helper",
  "description": "Copy DSA tables; rich text hotkeys",
  "version": "1.1.3",
  "manifest_version": 3,
  "permissions": [
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://support.ucsd.edu/*",
    "https://snqa.ucsd.edu/*"
  ],
  "icons": {
    "128": "resnet_logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "copy.png"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "snowListener.js"
  },
  "content_scripts": [
    {
      "css": [
        "dsaStyles.css"
      ],
      "js": [
        "dsaSearch.js"
      ],
      "matches": [
        "https://iam.ucsd.edu/dsasearch/",
        "https://iam.ucsd.edu/dsasearch/dsaSearchByEmail*",
        "https://iam.ucsd.edu/dsasearch/deptList*"
      ]
    }
  ],
  "commands": {
    "hyperlink": {
      "description": "Formats text as a hyperlink",
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+K"
      }
    },
    "bold": {
      "description": "Formats text as bold",
      "suggested_key": "Ctrl+B"
    },
    "image": {
      "description": "Formats link as an image",
      "suggested_key": "Ctrl+I"
    }
  }
}
