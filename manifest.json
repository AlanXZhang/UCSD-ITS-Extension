{
  "name": "ITS Helper",
  "description": "Copy DSA tables; rich text hotkeys; collapse SNOW email quotes",
  "version": "1.3.0",
  "manifest_version": 3,
  "permissions": [
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://support.ucsd.edu/*",
    "https://snqa.ucsd.edu/*"
  ],
  "icons": {
    "128": "resnet_logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "copy.png"
      ],
      "matches": [
        "http://*.ucsd.edu/*",
        "https://*.ucsd.edu/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "css": [
        "dsaStyles.css"
      ],
      "js": [
        "dsaSearch.js"
      ],
      "matches": [
        "https://iam.ucsd.edu/dsasearch/",
        "https://iam.ucsd.edu/dsasearch/dsaSearchByEmail*",
        "https://iam.ucsd.edu/dsasearch/deptList*"
      ]
    },
    {
      "js": [
        "snowCollapse.js",
        "snowFormatting.js"
      ],
      "matches": [
        "https://support.ucsd.edu/*",
        "https://snqa.ucsd.edu/*",
        "https://sndev.ucsd.edu/*"
      ],
      "all_frames": true
    }
  ]
}
